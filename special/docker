FROM apache/nifi

#COPY our_process.nar /opt/nifi/nifi-1.6.0/lib/
COPY heartbeatv4.xml /opt/nifi/nifi-1.6.0/conf/templates
COPY heartbeatv3.xml /opt/nifi/nifi-1.6.0/conf/templates
COPY heartbeatv2.xml /opt/nifi/nifi-1.6.0/conf/templates
COPY saved_with_website.xml /opt/nifi/nifi-1.6.0/conf/templates

USER root
RUN mkdir /lib/jdbc
WORKDIR /lib/jdbc
RUN wget https://jdbc.postgresql.org/download/postgresql-42.2.12.jar
RUN pwd
RUN ls

USER nifi

EXPOSE 8080 8443 10000 8000

WORKDIR ${NIFI_HOME}
ENTRYPOINT ["../scripts/start.sh"]
